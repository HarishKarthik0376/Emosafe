<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="bottom">
    <LinearLayout
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_340sdp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:backgroundTint="@color/maingreen"
            android:background="@drawable/cardradius">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/cardradius"/>
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/newreturn"
                android:id="@+id/closepatientdialog"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add A Patient"
                android:textSize="@dimen/_17sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/roundedges"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/lightyellow"
                        android:textSize="@dimen/_15sdp"
                        android:layout_gravity="center|left"
                        android:textStyle="bold"
                        android:layout_marginStart="55dp"
                />
                    <EditText
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/round"
                        android:ems="13"
                        android:maxLength="15"
                        android:id="@+id/name"
                        android:textColor="@color/black"
                        android:hint="Enter name"
                        android:textColorHint="@color/lightblue"
                        android:textStyle="bold"
                        android:textAlignment="center"

                        android:maxHeight="@dimen/_30sdp"
                        android:maxWidth="@dimen/_200sdp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blood Group"
                        android:textColor="@color/lightyellow"
                        android:textSize="@dimen/_15sdp"
                        android:layout_gravity="center|left"
                        android:textStyle="bold"
                        android:layout_marginStart="55dp"
         />
                    <EditText
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/round"
                        android:ems="13"
                        android:maxLines="5"
                        android:inputType="textMultiLine"
                        android:maxLength="120"
                        android:textColor="@color/black"
                        android:id="@+id/bloodgroup"
                        android:hint="Enter blood group"
                        android:textColorHint="@color/lightblue"
                        android:textStyle="bold"
                        android:textAlignment="center"

                        android:maxHeight="@dimen/_50sdp"
                        android:maxWidth="@dimen/_200sdp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age"
                        android:textColor="@color/lightyellow"
                        android:textSize="@dimen/_13sdp"
                        android:layout_gravity="center|left"
                        android:textStyle="bold"
                        android:layout_marginStart="55dp"
             />
                        <EditText
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/round"
                            android:ems="13"
                            android:maxLines="5"
                            android:inputType="textMultiLine"
                            android:maxLength="120"
                            android:textColor="@color/black"
                            android:id="@+id/age"
                            android:hint="Enter age"
                            android:textColorHint="@color/lightblue"
                            android:textStyle="bold"
                            android:textAlignment="center"

                            android:maxHeight="@dimen/_50sdp"
                            android:maxWidth="@dimen/_200sdp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email Id"
                        android:textColor="@color/lightyellow"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_gravity="center|left"
                        android:textStyle="bold"
                        android:layout_marginStart="55dp"
                        />
                    <EditText
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/round"
                        android:ems="13"
                        android:maxLines="5"
                        android:inputType="textMultiLine"
                        android:maxLength="120"
                        android:textColor="@color/black"
                        android:id="@+id/emailid"
                        android:hint="Enter Email Id"
                        android:textColorHint="@color/lightblue"
                        android:textStyle="bold"
                        android:textAlignment="center"

                        android:maxHeight="@dimen/_50sdp"
                        android:maxWidth="@dimen/_200sdp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearlayouabovebtn"
                    android:orientation="horizontal">

</LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/addpatient"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:backgroundTint="@color/background_black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:strokeColor="@color/goldenyello"
                        app:rippleColor="@color/goldenyello"
                        app:strokeWidth="2dp" />

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/newrightarrow"
                        app:layout_constraintTop_toTopOf="@id/addpatient"
                        app:layout_constraintStart_toStartOf="@id/addpatient"
                        app:layout_constraintEnd_toEndOf="@id/addpatient"
                        app:layout_constraintBottom_toBottomOf="@id/addpatient"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</LinearLayout>